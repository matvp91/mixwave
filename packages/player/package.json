    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/eventemitter3": "^2.0.2",
    "@types/react": "^18.3.3",
    "@types/use-sync-external-store": "^0.0.6",
    "@vitejs/plugin-react": "^4.3.1",
    "typedoc": "^0.26.8",
    "typedoc-plugin-markdown": "^4.2.9",
    "vite": "^5.4.1",
    "vite-plugin-dts": "^4.2.4",
    "vite-plugin-svgr": "^4.2.0",
