{
  "name": "@mixwave/player",
  "version": "1.1.1",
  "description": "Video player controls (React, Tailwind) and an HLS.js facade",
  "author": "Mixwave",
  "homepage": "https://github.com/matvp91/mixwave/tree/main/packages/player",
  "maintainers": [
    {
      "name": "Matthias Van Parijs"
    }
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./react": "./dist/react.js"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "react": [
        "./dist/react.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc -b && vite build",
    "typedoc": "pnpm run build && typedoc --tsconfig tsconfig.typedoc.json",
    "lint": "eslint \"./src/**/*.ts\" \"./src/**/*.tsx\" && prettier --check \"./src/**/*.ts\" \"./src/**/*.tsx\""
  },
  "peerDependencies": {
    "hls.js": "^1.6.0-beta.1",
    "react": "^18.3.1"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "eventemitter3": "^5.0.1",
    "screenfull": "^6.0.2",
    "use-sync-external-store": "^1.2.2"
  },
  "devDependencies": {
    "@types/eventemitter3": "^2.0.2",
    "@types/react": "^18.3.3",
    "@types/use-sync-external-store": "^0.0.6",
    "@vitejs/plugin-react": "^4.3.1",
    "typedoc": "^0.26.8",
    "typedoc-plugin-markdown": "^4.2.9",
    "vite": "^5.4.1",
    "vite-plugin-dts": "^4.1.0",
    "vite-plugin-svgr": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matvp91/mixwave.git"
  },
  "bugs": {
    "url": "https://github.com/matvp91/mixwave/issues"
  },
  "license": "MPL-2.0"
}
