{
  "name": "@superstreamer/player",
  "version": "1.2.2",
  "description": "Video player controls (React, Tailwind) and an HLS.js facade",
  "author": "Superstreamer",
  "homepage": "https://github.com/matvp91/superstreamer/tree/main/packages/player",
  "maintainers": [
    {
      "name": "Matthias Van Parijs"
    }
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./react": "./dist/react.js"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "react": [
        "./dist/react.d.ts"
      ]
    }
